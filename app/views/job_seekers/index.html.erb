<h1>Listing Job Applicants</h1>
<table class="pure-table pure-table-horizontal">


  <thead>
    <tr>
      <th>Name first</th>
      <th>Name last</th>
      <th>Email</th>
      <th>Password</th>
      <th>Phone number</th>
      <th>Skills</th>
      <th>Resume</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @job_seekers.each do |job_seeker| %>
      <tr>
        <td><%= job_seeker.name_first %></td>
        <td><%= job_seeker.name_last %></td>
        <td><%= job_seeker.email %></td>
        <td><%= job_seeker.password %></td>
        <td><%= job_seeker.phone_number %></td>
        <td><%= job_seeker.skills %></td>
        <td><%= job_seeker.resume %></td>
        <td><%= link_to 'Show', job_seeker %></td>
        <td><%= link_to 'Edit', edit_job_seeker_path(job_seeker) %></td>
        <td><%= button_to  'Destroy', job_seeker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

