<body>

   <!-- Header
   ================================================== -->
   <header>


      <div class="row">

         <div class="twelve columns">
 <div class="logo">
                <%= link_to(image_tag( "logo.png",alt: "DireWolf", class: "round"),"/") %>  
            </div>


            <nav id="nav-wrap">

               <a class="mobile-btn" href="#nav-wrap" title="Show navigation">Show navigation</a>
              <a class="mobile-btn" href="#" title="Hide navigation">Hide navigation</a>
               <ul id="nav" class="nav">
                 <!-- <li class="current"><a href="landing.html">Home</a></li> -->
                  <li><a href="#">Contact</a></li>
  <% if !(current_user == nil) && (current_user.role == 3 )%>
                     <li><span><a href="#">Admin</a></span>
                     <ul>
                        <li><a href="/employers">Employers</a></li>
                        <li><a href="/categories">Job Categories</a></li>
                        <li><a href="/admin_users">Admins</a></li>
                     </ul>
                  </li>
                  <% end %>

                      <% if !(current_user == nil) && (current_user.role == 2 )%>
                    <li><span><a href="#">Employers</a></span>
                     <ul>
                        <li><a href="/employers">Post</a></li>
                        <li><a href="/job_applications">View Applications</a></li>
                     </ul>
                  </li>
                  <% end %>

                  <li><span><a href="#">Job Seekers</a></span>
                     <ul>
                       <%if user_signed_in? %>
                        <li><a href="/jobs">Jobs & Internships</a></li>
                        <li><a href="/employers">Companies</a></li>
                       <% else %>
                       <li><a href="/visitors">Jobs & Internships</a></li>
                       <% end %>
                     </ul>
                  </li>

                 <% if user_signed_in? %>
                     Logged in as <strong><%= current_user.email %></strong>.
                     <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> |
                     <%= link_to "Logout", destroy_user_session_path, method: :delete  %>
                 <% else %>
                     <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
                     <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
                 <% end %>
               </ul> <!-- end #nav -->

            </nav> <!-- end #nav-wrap -->

         </div>

      </div>

   </header> <!-- Header End -->

   <!-- Intro Section
   ================================================== -->
   <section id="intro">

      <!-- Flexslider Start-->
     <div id="intro-slider" class="flexslider">

       <ul class="slides">

            <!-- Slide -->
         <li>
           <div class="row">
             <div class="twelve columns">
               <div class="slider-text">
                 <h1>Reach Out<span>.</span></h1>
                 <p>For further Queries, Contact our Dire Wolf Office near Centennial EBII building@NCSU</p>
               </div>
                     <div class="slider-image">
                        <%= image_tag( "contact-image-01.png", alt: "DireWolf", class: "round") %> 
                     </div>
             </div>
           </div>
         </li>

       </ul>

     </div> <!-- Flexslider End-->

   </section> <!-- Intro Section End-->

   <!-- Info Section
   ================================================== -->
   <section id="info">

      <div class="row">

         <div class="bgrid-quarters s-bgrid-halves">

           <div class="columns">
              <h2>Companies.</h2>
              <p>We have partnered with many companies.Begin your search to explore the endless opportunities.
              </p>
           </div>

           <div class="columns">
              <h2>Searching for a Job?.</h2>

              <p>Register to the Site ASAP! We shall show you who's waiting for you.
              </p>
           </div>

           <div class="columns s-first">
              <h2>E-Partners.</h2>

              <p>Our E-Partners include most of the fortune 500 companies of the likes of Wolfbook, Wolfsoft, and the list goes on.
              </p>
           </div>


           <div class="columns">
            <h2>Search for Jobs</h2>
             <%if user_signed_in? %>
         <p>Start your search here..
              <%= form_tag "jobs/show", :method => 'post' do %>
                       <%= text_field_tag :search, params[:search] %>
                       <%= submit_tag "Search Jobs", :name => nil %>
                      <% end %>
                      </p>
                 <%else %>
                 <p>Start your search here..
                   <%= form_tag "visitors/show", :method => 'post' do %>
                       <%= text_field_tag :search, params[:search] %>
                       <%= submit_tag "Search Jobs", :name => nil %>
                   <% end %>
                 </p>
             <%end%>
           </div>

           </div>

      </div>

   </section> <!-- Info Section End-->

   


   <!-- footer
   ================================================== -->
   <footer>

      <div class="row">

         <div class="twelve columns">

            <ul class="footer-nav">
          <li><a href="#">Home.</a></li>
